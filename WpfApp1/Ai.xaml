<Window x:Class="WpfApp1.Ai"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Computer diagnostic Assistant" Height="400" Width="589">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Display chat messages -->
        <ListBox x:Name="MessagesListBox" Grid.Row="1" Margin="5" DisplayMemberPath="Text" />

        <!-- Input box and send button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="5">
            <TextBox x:Name="UserInputTextBox" Width="200" Margin="0,0,5,0"/>
            <Button Content="Send" Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
